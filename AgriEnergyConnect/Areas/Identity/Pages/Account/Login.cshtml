@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">Log In to Your Account</h2>
                    <p class="mb-0 mt-1 fst-italic small">Welcome back to AgriEnergyConnect!</p>
                </div>

                <div class="card-body p-4">
                    <form id="account" method="post">
                        <h5 class="text-center mb-4">Use a local account to log in.</h5>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small d-block mt-1"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-bold">Password</label>
                            <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger small d-block mt-1"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="mb-3 form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label fw-bold">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mt-4">
                            <button id="login-submit" type="submit" class="btn btn-success btn-lg">Log in</button>
                        </div>
                    </form>

