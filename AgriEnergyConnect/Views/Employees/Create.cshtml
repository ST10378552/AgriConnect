@model AgriEnergyConnect.Models.Employee

@{
    ViewData["Title"] = "Add New Employee";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">Add New Employee</h2>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"><i class="fas fa-user me-1"></i> First Name</label>
                            <input asp-for="FirstName" class="form-control" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"><i class="fas fa-user-tag me-1"></i> Last Name</label>
                            <input asp-for="LastName" class="form-control" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"><i class="fas fa-envelope me-1"></i> Email</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"><i class="fas fa-id-card me-1"></i> Role</label>
                            <input asp-for="Role" class="form-control" required />
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success"><i class="fas fa-check-circle me-1"></i> Create</button>
                            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}