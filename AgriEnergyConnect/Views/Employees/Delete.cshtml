@model AgriEnergyConnect.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h2 class="mb-0">Delete Employee</h2>
                    <p class="mb-0 mt-1 fst-italic small text-white-50">Are you sure you want to delete this employee?</p>
                </div>

                <div class="card-body p-4">
                    <h5 class="text-center mb-4">Employee Details</h5>
                    <hr />

                    <dl class="row mb-4">
                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-user me-2"></i> First Name
                        </dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-user-tag me-2"></i> Last Name
                        </dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-envelope me-2"></i> Email
                        </dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-id-card me-2"></i> Role
                        </dt>
                        <dd class="col-sm-8">@Model.Role</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="d-grid gap-2">
                        <input type="hidden" asp-for="EmployeeId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>