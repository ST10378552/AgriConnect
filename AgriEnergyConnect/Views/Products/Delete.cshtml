@model AgriEnergyConnect.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h2 class="mb-0">Delete Product</h2>
                    <p class="mb-0 mt-1 fst-italic small text-white-50">Are you sure you want to delete this product?</p>
                </div>

                <div class="card-body p-4">
                    <h5 class="text-center mb-4">Product Details</h5>
                    <hr />

                    <dl class="row mb-4">
                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-box me-2"></i> Name
                        </dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-tags me-2"></i> Category
                        </dt>
                        <dd class="col-sm-8">@Model.Category</dd>

                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-calendar-alt me-2"></i> Production Date
                        </dt>
                        <dd class="col-sm-8">@Model.ProductionDate.ToShortDateString()</dd>

                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-align-left me-2"></i> Description
                        </dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 d-flex align-items-center">
                            <i class="fas fa-user-farm me-2"></i> Farmer Email
                        </dt>
                        <dd class="col-sm-8">@Model.FarmerEmail</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="d-grid gap-2">
                        <input type="hidden" asp-for="ProductId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>