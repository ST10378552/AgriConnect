@model AgriEnergyConnect.Models.Farmer

@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">My Farmer Profile</h2>
                    <p class="mb-0 mt-1 fst-italic small text-white-50">Review your personal information and farming details.</p>
                </div>

                <div class="card-body p-4">

                    <!-- Farmer Details -->
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3"><i class="fas fa-user-circle me-2 text-success"></i>Personal Information</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong><i class="fas fa-user me-2"></i>Name</strong>
                                <span>@Model.FullName</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong><i class="fas fa-envelope me-2"></i>Email</strong>
                                <span>@Model.Email</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong><i class="fas fa-phone me-2"></i>Phone</strong>
                                <span>@Model.PhoneNumber</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Farm Details -->
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3"><i class="fas fa-seedling me-2 text-success"></i>Farm Information</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong><i class="fas fa-map-marker-alt me-2"></i>Location</strong>
                                <span>@Model.Location</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong><i class="fas fa-ruler-combined me-2"></i>Farm Size</strong>
                                <span>@Model.FarmSize hectares</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong><i class="fas fa-briefcase me-2"></i>Years of Experience</strong>
                                <span>@Model.YearsOfExperience years</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Actions -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i> Edit Profile
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>