@model AgriEnergyConnect.Models.Farmer

@{
    ViewData["Title"] = "Delete Farmer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center py-4">
                    <h2 class="mb-0">Delete Farmer</h2>
                    <p class="mb-0 mt-1 fst-italic small text-white-50">Are you sure you want to delete this farmer?</p>
                </div>

                <div class="card-body p-4">
                    <h4 class="text-center mb-4">Farmer Details</h4>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 d-flex align-items-center fw-bold">
                            <i class="fas fa-user me-2"></i> Name
                        </dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4 d-flex align-items-center fw-bold">
                            <i class="fas fa-envelope me-2"></i> Email
                        </dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 d-flex align-items-center fw-bold">
                            <i class="fas fa-phone me-2"></i> Phone
                        </dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4 d-flex align-items-center fw-bold">
                            <i class="fas fa-map-marker-alt me-2"></i> Location
                        </dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4 d-flex align-items-center fw-bold">
                            <i class="fas fa-ruler-combined me-2"></i> Farm Size
                        </dt>
                        <dd class="col-sm-8">@Model.FarmSize hectares</dd>

                        <dt class="col-sm-4 d-flex align-items-center fw-bold">
                            <i class="fas fa-briefcase me-2"></i> Experience
                        </dt>
                        <dd class="col-sm-8">@Model.YearsOfExperience years</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>