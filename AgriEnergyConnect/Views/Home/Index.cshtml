@{
    ViewData["Title"] = "AgriEnergyConnect - Empowering Sustainable Agriculture";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css " />

    <!-- Google Fonts (Optional) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins :wght@400;600&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            scroll-behavior: smooth;
        }

        .hero-section {
            position: relative;
            color: white;
            text-align: center;
            padding: 140px 20px 100px;
            background-image: url('https://naturespath.com/cdn/shop/articles/organic_farm_field-598622.jpg?v=1725927254 ');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        .overlay {
            background-color: rgba(16, 124, 72, 0.75); /* Green overlay */
            padding: 100px 0;
        }

        h1.display-4 {
            font-weight: 600;
            letter-spacing: 1px;
            animation: fadeInUp 1s ease forwards;
        }

        p.lead {
            font-size: 1.25rem;
            animation: fadeInUp 1s ease forwards;
            animation-delay: 0.3s;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .feature-card {
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            border-radius: 10px;
            height: 100%;
            border: 1px solid #d1e7dd;
        }

            .feature-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 25px rgba(40, 167, 69, 0.25);
            }

            .feature-card .card-body i {
                transition: transform 0.3s ease;
            }

            .feature-card:hover .card-body i {
                transform: scale(1.1);
            }

        .testimonial-card .blockquote {
            max-width: 700px;
            margin: auto;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: #218838;
        }

        .contact-section p {
            margin-bottom: 0.5rem;
        }

        .login-box {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #28a745;
            color: white;
            font-weight: bold;
        }

        .card-footer {
            background-color: transparent;
            border-top: none;
        }

        .btn-success {
            background-color: #1e7e34;
            border: none;
        }

            .btn-success:hover {
                background-color: #17a2b8;
                transition: background-color 0.3s ease;
            }

        footer {
            background-color: #1e7e34;
        }

        .footer a {
            color: #c1f0c1;
            text-decoration: none;
        }

            .footer a:hover {
                text-decoration: underline;
            }

        .social-icons a {
            transition: color 0.3s ease;
        }

            .social-icons a:hover {
                color: #ffffff !important;
            }

        .section-title {
            position: relative;
            display: inline-block;
            margin-bottom: 2rem;
        }

            .section-title::after {
                content: '';
                width: 60px;
                height: 3px;
                background: #28a745;
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="overlay">
            <div class="container">
                <h1 class="display-4">AgriEnergyConnect</h1>
                <p class="lead">Empowering sustainable agriculture through green energy solutions.</p>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-lg mt-3 px-4 py-2">
                    <i class="fas fa-user-plus me-1"></i> Join Us Today
                </a>
            </div>
        </div>
    </section>

    <main role="main" class="flex-grow-1">
        <div class="container my-5">

            <!-- Features Section -->
            <section class="features-section mb-5">
                <div class="text-center mb-5">
                    <h2 class="section-title fw-bold">Why Choose AgriEnergyConnect?</h2>
                    <p class="text-muted mt-2">Join a better future for farming with our tools designed for farmers and employees.</p>
                </div>
                <div class="row justify-content-center g-4">
                    <div class="col-md-4">
                        <div class="card h-100 feature-card shadow-sm border-0 rounded-3">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-users fa-3x text-success mb-3"></i>
                                <h5 class="card-title fw-bold">Farmer Registration</h5>
                                <p class="card-text text-muted">
                                    Create profiles for farmers and manage their details effortlessly.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 feature-card shadow-sm border-0 rounded-3">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-boxes fa-3x text-success mb-3"></i>
                                <h5 class="card-title fw-bold">Product Management</h5>
                                <p class="card-text text-muted">
                                    Add, edit, and track agricultural products seamlessly.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 feature-card shadow-sm border-0 rounded-3">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                                <h5 class="card-title fw-bold">Employee Tools</h5>
                                <p class="card-text text-muted">
                                    Manage farmers and products efficiently with advanced tools.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Testimonials Section -->
            <section class="testimonials-section py-5 mt-5 bg-white rounded-3 shadow-sm">
                <div class="text-center mb-5">
                    <h2 class="fw-bold">What Our Users Say</h2>
                    <p class="text-muted">Hear from farmers and employees how we’ve made an impact.</p>
                </div>
                <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="testimonial-card d-flex justify-content-center">
                                <figure class="blockquote mx-auto text-center">
                                    <blockquote class="blockquote fs-5 fst-italic">
                                        “AgriEnergyConnect has transformed our farming operations by streamlining product management.”
                                    </blockquote>
                                    <figcaption class="blockquote-footer mt-3">
                                        John Doe, Farmer
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="testimonial-card d-flex justify-content-center">
                                <figure class="blockquote mx-auto text-center">
                                    <blockquote class="blockquote fs-5 fst-italic">
                                        “Efficient tools for managing farmers and products. Love it!”
                                    </blockquote>
                                    <figcaption class="blockquote-footer mt-3">
                                        Jane Smith, Employee
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="testimonial-card d-flex justify-content-center">
                                <figure class="blockquote mx-auto text-center">
                                    <blockquote class="blockquote fs-5 fst-italic">
                                        “The platform is user-friendly and helps us stay organized.”
                                    </blockquote>
                                    <figcaption class="blockquote-footer mt-3">
                                        Mike Johnson, Manager
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </section>

            <!-- Contact Section -->
            <section class="contact-section text-center mt-5">
                <div class="card shadow-sm border-0 rounded-3 mx-auto" style="max-width: 600px;">
                    <div class="card-header">Find Us</div>
                    <div class="card-body">
                        <p class="mb-2"><i class="fas fa-map-marker-alt me-1"></i> AgriEnergyConnect HQ | Cape Town, South Africa</p>
                        <p class="mb-2"><i class="fas fa-envelope me-1"></i> support@agrienergyconnect.co.za</p>
                        <div class="mt-3 social-icons">
                            <a href="#" class="text-success me-3"><i class="fab fa-facebook fa-2x"></i></a>
                            <a href="#" class="text-success me-3"><i class="fab fa-twitter fa-2x"></i></a>
                            <a href="#" class="text-success"><i class="fab fa-linkedin fa-2x"></i></a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-success text-white py-4 mt-auto footer">
        <div class="container text-center">
            <p class="mb-0">&copy; @DateTime.Now.Year - AgriEnergyConnect. All rights reserved.</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>