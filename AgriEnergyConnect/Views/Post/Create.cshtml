@model AgriEnergyConnect.Models.Post

@{
    ViewData["Title"] = "Create New Post";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0">Create New Post</h2>
                    <p class="mb-0 mt-1 fst-italic small text-white-50">Share your thoughts or ask questions about sustainable farming</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <!-- Farmer Email -->
                        <div class="mb-3">
                            <label asp-for="FarmerEmail" class="form-label fw-bold">
                                <i class="fas fa-envelope me-1"></i> Your Email
                            </label>
                            <input asp-for="FarmerEmail" class="form-control" placeholder="Enter your email" required />
                            <span asp-validation-for="FarmerEmail" class="text-danger small d-block mt-1"></span>
                        </div>

                        <!-- Content -->
                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">
                                <i class="fas fa-comment-dots me-1"></i> Your Post
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your message here..." required></textarea>
                            <span asp-validation-for="Content" class="text-danger small d-block mt-1"></span>
                        </div>

                        <!-- Submit & Back Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Back to Forum
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-1"></i> Post Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}